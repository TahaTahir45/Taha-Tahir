{% schema %}
{
  "name": "Custom Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Welcome to Our Store"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "Discover our latest collections"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "sustainable_bg_color",
      "label": "Sustainable Section Background Color",
      "default": "#C0C0C0"
    },
    {
      "type": "text",
      "id": "sustainable_text",
      "label": "Sustainable Section Text",
      "default": "Sustainable, ethically made activewear"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-hero-banner">
  <div class="hero-image" style="background-image: url({{ section.settings.banner_image | img_url: '2100x1080' }});">
    <div class="hero-content" style="text-align: {{ section.settings.text_alignment }}; color: {{ section.settings.text_color }};">
      <h1 style="text-align: {{ section.settings.heading_alignment }};">{{ section.settings.heading_text }}</h1>
      <p style="font-size: 2rem;">{{ section.settings.subheading_text }}</p>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

<div class="sustainable-section" style="background-color: {{ section.settings.sustainable_bg_color }};">
  <p>{{ section.settings.sustainable_text }}</p>
</div>

<style>
  .custom-hero-banner .hero-image {
    position: relative;
    background-size: cover;
    background-position: center;
    padding: 200px 20px;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .custom-hero-banner .hero-content {
    max-width: 1200px;
    margin: 0 auto;
  }
  .custom-hero-banner h1 {
    font-size: 3rem;
    font-weight: bold;
    margin: 0 0 10px;
  }
  .custom-hero-banner p {
    margin-bottom: 20px;
  }
  .custom-hero-banner .hero-button {
    background-color: #002366;
    color: #fff;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 1rem;
  }
  .sustainable-section {
    background-color: {{ section.settings.sustainable_bg_color }};
    padding: 15px 20px;
    width: 100%; 
    text-align: center;
  }
  .sustainable-section p {
    font-size: 1.5rem;
    margin: 0;
    color: #333;
  }
  @media (max-width: 768px) {
    .custom-hero-banner h1 {
      font-size: 2rem;
    }
    .sustainable-section p {
      font-size: 1.2rem;
    }
  }
  
</style>
